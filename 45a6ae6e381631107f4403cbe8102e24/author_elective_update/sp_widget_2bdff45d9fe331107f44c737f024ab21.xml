        <template><![CDATA[<div ng-if="data.otherUsersInfo.length >= 0" class="table-responsive-sm">
  <div class="filters">
    <button class="btn btn-all" ng-click="c.filter('all')">All</button>
    <button class="btn btn-approved" ng-click="c.filter('approved')">Approved</button>
    <button class="btn btn-rejected" ng-click="c.filter('rejected')">Rejected</button>
    <button class="btn btn-pending" ng-click="c.filter('pending')">Pending</button>
  </div>
  <h2>Find the requests details here.</h2>
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">MUID / XUID</th>
        <th scope="col">Mail Id</th>
        <th scope="col">Automation Name</th>
        <th scope="col">Environment</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="info in data.otherUsersInfo">
        <th scope="row">{{info.no}}</th>
        <td>{{info.name}}</td>
        <td>{{info.uid}}</td>
        <td>{{info.mailId}}</td>
        <td>{{info.automationName}}</td>
        <td>{{info.environment}}</td>
        <td ng-if="info.status=='Granted'"class="text-green">{{info.status}}</td>
        <td ng-if="info.status=='Removed'" class="text-warning">{{info.status}}</td>
        <td ng-if="info.status=='Rejected'" class="text-red">{{info.status}}</td>
        <td ng-if="info.status=='Pending'" class="text-blue">{{info.status}}</td>
       <!--
        <td  ng-class="{'text-red': item.value='Rejected','text-warning': item.value='Removed','text-green': item.value='Granted'}">{{info.status}}</td>
-->      
</tr>
    </tbody>
  </table>
</div>
<div ng-if="data.otherUsersInfo.length <= 0" class="no-request">
  <h2>
    No request found.
  </h2>
</div>
]]></template>
