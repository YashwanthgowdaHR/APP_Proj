        <script><![CDATA[(function () {
	/* populate the 'data' object */
	/* e.g., data.table = $sp.getValue('table'); */

	gr = new GlideRecord('x_1131046_aa_man_0_environment');
	data.env = gr.getElement('name').getChoices();
	data.name = gs.getUserDisplayName();
	data.username = gs.getUserName();
	
	var userObj = gs.getUser();
	data.firstName = userObj.getFirstName();
	data.lastName = userObj.getLastName();
	data.mailID = userObj.getEmail();
	
	if (input) {
		if (input.name != "" && input.username != "" && input.mailID != "" && input.tempEnv != "") {
			gr = new GlideRecord('x_1131046_aa_man_0_user_requests');
			gr.addQuery('name', input.name);
			gr.addQuery('username', input.username);
			gr.addQuery('mail_id', input.mailID);
			gr.addQuery('environment', input.tempEnv);
			gr.addQuery('first_name', input.firstName);
			gr.addQuery('last_name', input.lastName);
			gr.query();
			if (!gr.hasNext()) {
				gr.initialize();
				gr.setValue('name', input.name);
				gr.setValue('first_name', input.firstName);
				gr.setValue('last_name', input.lastName);
				gr.setValue('username', input.username);
				gr.setValue('mail_id', input.mailID);
				gr.setValue('environment', input.tempEnv);
				gr.setValue('status', "pending");
				gr.insert();
				//isInserted = True | false, msg
				gs.addInfoMessage('Request submitted successfully.');
			} else {
				gs.addErrorMessage('Request submitted already!');
			}

		} else {
			gs.addErrorMessage("Check fields again");
		}
	}
})();]]></script>
